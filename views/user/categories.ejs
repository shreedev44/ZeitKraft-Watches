<%- include('../layout/header') -%>
<title>ZEITKRAFT | Watch Categories</title>

    <%- include('../layout/userSideCss') %>
</head>

<body>
<%- include('../layout/navbar') -%>

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Categories</h4>
                    <div class="breadcrumb__links">
                        <a href="/home">Home</a>
                        <span>Categories</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<% if(categories.length > 0) {%>
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-3 pb-3">
                <div class="col-md-12 heading-section text-center ftco-animate">
                    <h2 class="mb-4">Watch Categories</h2>
                    <p>Top Watch Categories on ZEITKRAFT</p>
                </div>
            </div>
        </div>
        <div class="container">
            <% for(let i = 0; i < categories.length; i++) { 
                if(i % 4 === 0) { %>
                    <div class="row">
                <% } %>
                <div class="col-sm-6 col-md-4 col-lg-3 ftco-animate">
                    <div class="product">
                        <a href="/shop?categories=<%= categories[i].categoryName %>&minPrice=&maxPrice=" class="img-prod">
                            <img class="img-fluid" src="/uploads/categories/<%= categories[i].categoryPic %>" alt="Category image" />
                            <% if(categories[i].offerPercent){ %>
                                <span class="status text-light"><%= categories[i].offerPercent %>% Off</span>
                            <% } %>
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 px-3 text-center">
                            <h3><a href="#"><%= categories[i].categoryName %></a></h3>
                        </div>
                    </div>
                </div>
                <% if((i + 1) % 4 === 0 || i === categories.length - 1) { %>
                    </div>
                <% } %>
            <% } %>
        </div>
    </section>
<% } %>


<script src="/UserAssets/ShopAssets/js/jquery-3.3.1.min.js"></script>
<%- include('../layout/pageFooter') -%>

<%- include('../layout/userSideScripts') %>
<%- include('../layout/footer') -%>