<%- include('../layout/header') -%>
<title>ZEITKRAFT | Contact Us</title>

    <%- include('../layout/userSideCss') %>
</head>

<body>
<%- include('../layout/navbar') -%>

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Contact Us</h4>
                    <div class="breadcrumb__links">
                        <a href="/home">Home</a>
                        <span>Contact</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
        <div class="w-100"></div>
        <div class="col-md-12">
            <h1>Do you have any questions?</h1>
            <h3>We'd be glad to help.</h3>
        </div>
      </div>
      <div class="row block-9">
        <div class="col-md-6 order-md-last d-flex">
          <form action="#" class="bg-white p-5 contact-form" id="contact-form">
            <div class="form-group">
                <span class="text-danger" id="name-error"></span>
                <input type="text" class="form-control" placeholder="Your Name" id="name" required>
            </div>
            <div class="form-group">
              <span class="text-danger" id="email-error"></span>
              <input type="text" class="form-control" placeholder="Your Email" id="email" required>
            </div>
            <div class="form-group">
              <span class="text-danger" id="subject-error"></span>
              <input type="text" class="form-control" placeholder="Subject" id="subject" required>
            </div>
            <div class="form-group">
              <span class="text-danger" id="message-error"></span>
              <textarea name="" id="message" cols="30" rows="7" class="form-control" placeholder="Message" required></textarea>
            </div>
            <span class="text-danger m-3" id="submit-error"></span>
            <div class="form-group">
              <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
            </div>
          </form>
        
        </div>

        <div class="col-md-6 d-flex">
            <img src="/UserAssets/images/contact.png" alt="image">
        </div>
      </div>
    </div>
  </section> 


<script src="/UserAssets/ShopAssets/js/jquery-3.3.1.min.js"></script>
<script src="/UserAssets/js/contact.js"></script>
